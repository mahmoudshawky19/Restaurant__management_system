 @using Models
   @model Employee
<div class="row mb-3">
    <h2><a href="/Admin/Employee/Index"><i class="bi bi-arrow-left"></i></a> Edit Employee: @Model.Name  </h2>
</div>

<div class="row">

    <form asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data" method="post">
        <div class="mb-3">

            <input type="hidden" class="form-control" id="CinemaName" name="Id" value="@Model.Id">

            <label for="Name" class="form-label">Employee Name</label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="mb-3">

            <label for="phoneNumber" class="form-label">phoneNumber</label>
            <input asp-for="phoneNumber" class="form-control">
        </div>        <div class="mb-3">

            <label for="Job" class="form-label">Job</label>
            <input asp-for="Job" class="form-control">
        </div>
        <div class="mb-3">

            <label for="salary" class="form-label">salary</label>
            <input asp-for="salary" class="form-control">
        </div>
        <label for="ProfilePicture" class="form-label">Profile Picture</label>
        <input type="file" class="form-control" id="ProfilePicture" name="ProfilePicture" onchange="previewImage(event)">
        <!-- Image preview --> </br >
        <img id="imagePreview" src="~/Images/@Model.ProfilePicture" alt="Image Preview" style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover;">
        </br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>