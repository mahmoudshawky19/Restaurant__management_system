@section Scripts {
    @if (@TempData["success"] != null)
    {

        <script>
            toastr.success('@TempData["success"]')

        </script>
    }
}

<div class="row mb-3">
    <div class="col-9">
        <h2>All Offers</h2>
    </div>
    <div class="col-3">
        <a href="/Admin/ShowOff/Create" type="button" class="btn btn-danger">
            <i class="bi bi-plus-circle"></i> Create New Offer
        </a>
    </div>
</div>
<form action="/Admin/ShowOff/Index" method="get">
    <div class="row mb-3">
        <div class="col-3">
            <input type="text" placeholder="Search..." class="form-control" name="search" value="@ViewContext.HttpContext.Request.Query["search"]">
        </div>
        <input type="hidden" name="page" value="@ViewBag.CurrentPage" />
        <div class="col-3">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price Before</th>
            <th scope="col">Price After</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-light">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.PriceBefore</td>
                <td>@item.PriceAfter</td>
                <td>@item.Category.Name</td>
                <td>
                    <a href="/Admin/ShowOff/Edit?id=@item.Id" type="button" class="btn btn-dark">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Offer", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
        </li>
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", "Offer", new { page = i })">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Offer", new { page = ViewBag.CurrentPage + 1 })">Next</a>
        </li>
    </ul>
</nav>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Offer?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    let deleteId;

    document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('button[data-bs-target="#deleteModal"]');

        deleteButtons.forEach(button => {
            button.addEventListener('click', function () {
                deleteId = this.getAttribute('data-id');
            });
        });

        document.getElementById('confirmDelete').addEventListener('click', function () {
            window.location.href = '/Admin/ShowOff/Delete?id=' + deleteId;
        });
    });
</script>
