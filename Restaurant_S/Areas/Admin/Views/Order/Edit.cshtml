@using  Models
@model Order
 <div class="row mb-3">
    <h2><a href="/Admin/Order/Index"><i class="bi bi-arrow-left"></i></a> Edit Order </h2>
</div>

<div class="row">

    <form asp-action="Edit" asp-controller="Order" enctype="multipart/form-data" method="post">
        <input type="hidden" class="form-control" id="CinemaName" name="Id" value="@Model.Id">

        <div class="mb-3">
            <label for="MovieId" class="form-label">Select Customer</label>
            <select class="form-select" name="CustomerId">
                @foreach (var item in ViewBag.a)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>

        </div>
@*         <a href="/Customer/Create" type="button" class="btn btn-outline-primary">Create new Customer</a>
 *@
        <div class="mb-3">

            <label for="OrderDate" class="form-label">OrderDate</label> 
            <input type="datetime-local" class="form-control" id="OrderDate" name="OrderDate" value="@Model.OrderDate.ToString("yyyy-MM-ddTHH:mm")">
        </div>
        <div class="mb-3">

            <label for="totalAmount" class="form-label"> total Amount</label>
            <input class="form-control" name="totalAmount" value="@Model.totalAmount">
        </div>

        <div class="mb-3">

            <label for="Price" class="form-label">Price</label>
            <input class="form-control" name="Price" value="@Model.Price">
        </div>
        <div class="mb-3">
            <label for="Status" class="form-label">Select Status</label>
            <select class="form-select" name="Status">
                @foreach (var item in (List<SelectListItem>)ViewBag.StatusList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>


        <button href="/Order/Details" type="submit" class="btn btn-primary">Submit</butto>
    </form>

</div>