@section Styles {
    <style>
        .row {
            margin: 0 auto;
            max-width: 1200px;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            padding: 15px 20px;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-img {
            max-height: 600px;
            width: 100%;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 20px;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .card-text {
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

        .price-badge {
            background-color: #ffc107;
            padding: 8px 15px;
            border-radius: 5px;
            color: #000;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            padding: 10px 20px;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .form-control {
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 100%;  
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .row.mb-3 {
            margin-bottom: 15px;
        }

        .col-md-8 {
            padding-left: 15px;
        }

        .col-md-6,
        .col-md-12 {
            padding-left: 0;
            padding-right: 0;
        }

         .form-wrapper {
            width: 100%;
        }
             .form-wrapper .row.mb-3 {
                margin-bottom: 10px;
            }

        .btn-success.w-100 {
            width: 100%;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            max-width: 300px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .product-info {
            text-align: center;
        }

        .product-title {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .price {
            margin-top: 10px;
            font-size: 16px;
        }

        .original-price {
            text-decoration: line-through;
            color: #777;
            font-size: 14px;
            margin-right: 10px;
        }

        .discounted-price {
            color: #ff5722;
            font-size: 16px;
            font-weight: bold;
        }

    </style>
}

<div class="row">
    <div class="col-12 col-md-6 mb-4 d-flex justify-content-center">
        <div class="card" style="width: 100%;">

             <div class="card-header">
                <h5 class="card-title">@Model.Name</h5>
            </div>

             <img src="~/Images/@Model.ImgUrl" class="card-img" alt="Image of @Model.Name">

            <div class="card-body">
                <div class="product-card">
                    <div class="product-info">
                        <div class="price">
                            <span class="original-price">EGP @Model.PriceBefore</span>  
                            <span class="discounted-price">EGP @Model.PriceAfter</span>  
                        </div>
                    </div>
                </div>
             <div class="card-body">
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>

  
                 <form action="/Customer/Cart/AddToCart" method="post" class="form-wrapper">
                    <input type="hidden" name="MenuItemId" value="@Model.Id" />

                     <div class="row mb-3">
                        <div class="col-12">
                            <input type="number" placeholder="Count..." class="form-control" name="count" min="1" />
                        </div>
                    </div>

                     <div class="row mb-3 justify-content-end">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success w-100">Add to List</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
